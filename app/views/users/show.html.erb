<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 sm:p-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">User Details</h1>
    <%= link_to "Edit", edit_user_path(@user), class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
  </div>

  <dl class="space-y-4">
    <div class="border-b border-gray-200 pb-4">
      <dt class="text-sm font-medium text-gray-500 mb-1">Username</dt>
      <dd class="text-base text-gray-900"><%= @user.username %></dd>
    </div>

    <div class="border-b border-gray-200 pb-4">
      <dt class="text-sm font-medium text-gray-500 mb-1">Email</dt>
      <dd class="text-base text-gray-900"><%= @user.email %></dd>
    </div>
  </dl>
</div>

