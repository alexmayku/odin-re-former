<% if @user.errors.any? %>
  <div class="mb-6 rounded-lg bg-red-50 border border-red-200 p-4 text-red-800">
    <h2 class="font-semibold text-base mb-2">
      <%= pluralize(@user.errors.count, "error") %> prevented this from being saved
    </h2>

    <ul class="mt-2 list-disc list-inside text-sm space-y-1">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, class: "space-y-6" do |form| %>
  <div class="space-y-2">
    <%= form.label :username, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :username, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
  </div>

  <div class="space-y-2">
    <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :email, placeholder: "you@example.com", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
  </div>

  <div class="space-y-2">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
  </div>

  <div class="pt-4">
    <%= form.submit class: "w-full sm:w-auto px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
  </div>
<% end %>